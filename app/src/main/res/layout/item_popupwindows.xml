<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/popuwindow_color">

    <RelativeLayout
        android:id="@+id/rl_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/schedule_popupWindow">

        <LinearLayout
            android:id="@+id/ll_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popu_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/schedule_popupWindow"
                android:text="拍照" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/schedule_popupWindow"
                android:text="从相册选取" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_popup"
            android:layout_marginTop="@dimen/schedule_popupWindow"
            android:background="@drawable/popu_bg"
            android:gravity="center"
            android:padding="@dimen/schedule_popupWindow"
            android:text="取消" />
    </RelativeLayout>
</RelativeLayout>